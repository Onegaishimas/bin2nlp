# Development Environment Configuration
APP_ENV=development
DEBUG=true
WORKERS=1

# API settings
API_HOST=0.0.0.0
API_PORT=8000
API_CORS_ORIGINS=["*"]

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Security (relaxed for development)
REQUIRE_API_KEYS=false
ENFORCE_HTTPS=false

# File processing
MAX_FILE_SIZE_MB=100
UPLOAD_TIMEOUT_SECONDS=300

# Rate limiting (relaxed for development)
DEFAULT_RATE_LIMIT_PER_MINUTE=1000
DEFAULT_RATE_LIMIT_PER_DAY=100000

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# LLM providers (optional for development)
LLM_ENABLED_PROVIDERS=["openai"]
LLM_DEFAULT_PROVIDER=openai
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=